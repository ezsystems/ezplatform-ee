{% block content %}
    <article class="embed">
        <a href="{{ path(location) }}" class="row">
            <div class="col-md-3">
                {{ ez_render_field(content, 'image', {
                    'parameters': { 'class': 'img-fluid' }
                }) }}
            </div>
            <div class="col-md-9">
                <h5>{{ ez_content_name(content) }}</h5>
                <div class="product-item-description">
                    {{ ez_render_field(content, 'description') }}
                </div>
            </div>
        </a>
    </article>
{% endblock %}
