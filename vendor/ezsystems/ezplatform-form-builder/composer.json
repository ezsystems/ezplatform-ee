{
    "name": "ezsystems/ezplatform-form-builder",
    "description": "eZ Platform Form Builder",
    "license": "TTL-2.0",
    "type": "ezplatform-bundle",
    "repositories": [
        { "type": "composer", "url": "https://updates.ez.no/ttl" }
    ],
    "require": {
        "ezsystems/ezplatform-admin-ui": "^1.5@dev",
        "ezsystems/ezplatform-page-builder": "^1.3@dev",
        "ezsystems/ezpublish-kernel": "^7.5@dev",
        "jms/serializer": "^1.11",
        "gregwar/captcha-bundle": "^2.0",
        "swiftmailer/swiftmailer": "^6.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.0",
        "ezsystems/behatbundle": "^7.0",
        "ezsystems/ezplatform-code-style": "^0.1.0",
        "friendsofphp/php-cs-fixer": "^2.16.0"
    },
    "autoload": {
        "psr-4": {
            "EzSystems\\EzPlatformFormBuilderBundle\\": "src/bundle/",
            "EzSystems\\EzPlatformFormBuilder\\": "src/lib/"
        }
    },
    "scripts": {
        "fix-cs": "php-cs-fixer fix -v --show-progress=estimating",
        "check-cs": "php-cs-fixer fix -v --diff --dry-run --show-progress=estimating",
        "test": "phpunit -c phpunit.xml"
    },
    "extra": {
        "_ezplatform_branch_for_behat_tests": "2.5",
        "branch-alias": {
            "dev-master": "1.2.x-dev",
            "dev-tmp_ci_branch": "1.2.x-dev"
        }
    }
}
